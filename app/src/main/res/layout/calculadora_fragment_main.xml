<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculadora.MainFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_resultado"
            android:minWidth="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="10dp"
            android:textSize="50sp"
            android:textAlignment="textEnd"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:background="@color/resultAndDigit"
            android:text="Resultado" />

        <TextView
            android:id="@+id/textView_conta"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="10dp"
            android:textSize="30sp"
            android:textAlignment="textEnd"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:background="@color/resultAndDigit"
            android:text="Conta" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_porcentagem"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="%" />

            <Button
                android:id="@+id/button_parenteses_esquerdo"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="(" />

            <Button
                android:id="@+id/button_parenteses_direito"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text=")" />

            <Button
                android:id="@+id/button_divisao"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_numero_sete"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="7" />

            <Button
                android:id="@+id/button_numero_oito"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="8" />

            <Button
                android:id="@+id/button_numero_nove"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="9" />

            <Button
                android:id="@+id/button_multiplicacao"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="X" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_numero_quatro"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="4" />

            <Button
                android:id="@+id/button_numero_cinco"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="5" />

            <Button
                android:id="@+id/button_numero_seis"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="6" />

            <Button
                android:id="@+id/button_subtracao"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_numero_um"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="1" />

            <Button
                android:id="@+id/button_numero_dois"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="2" />

            <Button
                android:id="@+id/button_numero_tres"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="3" />

            <Button
                android:id="@+id/button_adicao"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_numero_zero"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="0" />

            <Button
                android:id="@+id/button_ponto"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="." />

            <Button
                android:id="@+id/button_numero_apagar"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/operatorsWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="DEL" />

            <Button
                android:id="@+id/button_igual"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/equalSign"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>